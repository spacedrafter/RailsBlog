<div class='col-sm-6 col-lg-4'>
  <div class="card">
    <%= link_to post do %>
      <div class="card-topper" style='background-image: url(<%= post.banner_image_url %>);'></div>
    <%end%>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <p><%= raw post.tags.map { |t| link_to t.name, posts_path(tag: t.name)}.join(', ') %></p>
      <p class="published-date"><%= post.display_day_published %></p>
      <%= link_to post do %>
        <p class="card-text"><%= truncate(post.description, lenght: 130) %></p>
      <%end%>
    </div>
  </div>
</div>
